<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2><%= @group.name %>メンバーへのメール</h2>
      <%= form_with url: group_send_mail_path(@group), method: :get, local: true do |f| %>
        <div class="form_group">
          <%= f.label :Title %>
          <%= f.text_field :mail_title, class: 'form_control' %>
        </div>
        <div class="form_group">
          <%= f.label :Content %>
          <%= f.text_area :mail_content, class: 'form_control' %>
        </div>
        <div class="form_group">
          <%= f.submit '送信' %>
        </div>
      <% end %>
    </div>
  </div>
</div>